@{
    ViewData["Title"] = "Create Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Add FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
        body {
            background-color: #1e1e2f;
            color: white;
            font-family: Arial, sans-serif;
        }

        .card {
            background-color: #2a2a3c;
            border: none;
            color: white;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1), 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15), 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .feature-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: auto;
        }

        .container {
            padding: 60px 0;
        }

        h2 {
            font-weight: bold;
            font-size: 2rem;
        }

        .card h3 {
            font-size: 1.2rem;
            margin-top: 15px;
        }

        p {
            font-size: 1rem;
            color: #ccc;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-5">Dashboard</h2>
        <p>Welcome to your dashboard. Here you can manage employees, view leave requests, and much more!</p>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Employees/Create" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-primary text-white">
                            <i class="fas fa-user-plus fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">Create Employee</h3>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Employees/Index" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-success text-white">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">View Employees</h3>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Leaves/Index" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-warning text-dark">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">Leave Requests</h3>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Payslips/Create" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-danger text-white">
                            <i class="fas fa-file-invoice-dollar fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">Payroll</h3>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Home/Privacy" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-info text-white">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">Guides</h3>
                    </div>
                </a>
            </div> 
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
