@model MyMvcApp.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Create New Student</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="control-label font-weight-bold">Full Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter student's full name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="invalid-feedback">Please provide a valid name.</div>
                        </div>

                        <!-- Age Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Age" class="control-label font-weight-bold">Age</label>
                            <input asp-for="Age" class="form-control form-control-lg" placeholder="Enter student's age" required />
                            <span asp-validation-for="Age" class="text-danger"></span>
                            <div class="invalid-feedback">Please provide a valid age.</div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-user-plus"></i> Create Student
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Custom Script for Form Validation -->
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}