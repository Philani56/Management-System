@{
    ViewBag.Title = "Employee - Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyMvcApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
        body {
            background-color: #1e1e2f;
            color: white;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background: linear-gradient(45deg, #6a11cb, #2575fc); /* Gradient for the navbar */
        }

        .card {
            background-color: #2a2a3c;
            border: none;
            color: white;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1), 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15), 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .feature-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: auto;
        }

        .container {
            padding: 60px 0;
        }

        h2 {
            font-weight: bold;
            font-size: 2rem;
        }

        .card h3 {
            font-size: 1.2rem;
            margin-top: 15px;
        }

        p {
            font-size: 1rem;
            color: #ccc;
            text-align: center;
            margin-top: 10px;
        }

        .logout-icon {
            cursor: pointer;
            font-size: 1.8rem;
            color: white;
            margin-left: auto; /* Align to the right */
        }

        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            padding: 12px 16px;
        }

            .dropdown-item:hover {
                background-color: #f1f1f1;
                color: #333;
            }

            .dropdown-item i {
                margin-right: 8px;
                font-size: 1.2rem;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Index">
                    <i class="fas fa-rocket me-2"></i>Employee Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex ms-auto">
                    <!-- Logout Icon -->
                    <a class="logout-icon" asp-controller="RegisterLogin" asp-action="Registration">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Dashboard Content -->
    <div class="container">
        <h2 class="text-center mb-5">Dashboard</h2>
        <p>Welcome to your dashboard. Here you can request leave for admins to see and download payslips!</p>
        <div class="row g-4">

            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Leaves/Create" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-warning text-dark">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">Request Leave</h3>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="https://localhost:7126/Payslips/Index" class="text-decoration-none">
                    <div class="card text-center p-4 rounded">
                        <div class="feature-icon bg-danger text-white">
                            <i class="fas fa-file-invoice-dollar fa-2x"></i>
                        </div>
                        <h3 class="h5 mt-3">View Payslip</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>