@model MyMvcApp.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="underlined-heading">Update Employee</h3>
            <p class="text-muted mb-3">Update the employee's details below. Ensure all required fields are filled accurately. If you have any questions, refer to the employee management guide or contact HR for assistance.</p>
            

            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeID" />

                <!-- Personal Information Section -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <strong>Personal Information</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control form-control-sm" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MiddleName" class="form-label">Middle Name</label>
                                    <input asp-for="MiddleName" class="form-control form-control-sm" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input asp-for="LastName" class="form-control form-control-sm" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Gender" class="form-label">Gender</label>
                                    <select asp-for="Gender" class="form-control form-control-sm">
                                        <option value="">-- Select Gender --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Nationality" class="form-label">Nationality</label>
                                    <input asp-for="Nationality" class="form-control form-control-sm" />
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MaritalStatus" class="form-label">Marital Status</label>
                                    <select asp-for="MaritalStatus" class="form-control form-control-sm">
                                        <option value="">-- Select Marital Status --</option>
                                        <option value="Single">Single</option>
                                        <option value="Married">Married</option>
                                        <option value="Divorced">Divorced</option>
                                        <option value="Widowed">Widowed</option>
                                    </select>
                                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information Section -->
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <strong>Contact Information</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control form-control-sm" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmailAddress" class="form-label">Email Address</label>
                                    <input asp-for="EmailAddress" class="form-control form-control-sm" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ResidentialAddress" class="form-label">Residential Address</label>
                                    <input asp-for="ResidentialAddress" class="form-control form-control-sm" />
                                    <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contact Section -->
                <div class="card mb-3">
                    <div class="card-header bg-warning text-white">
                        <strong>Emergency Contact</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EmergencyContactName" class="form-label">Name</label>
                                    <input asp-for="EmergencyContactName" class="form-control form-control-sm" />
                                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EmergencyContactRelationship" class="form-label">Relationship</label>
                                    <input asp-for="EmergencyContactRelationship" class="form-control form-control-sm" />
                                    <span asp-validation-for="EmergencyContactRelationship" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EmergencyContactPhone" class="form-label">Phone</label>
                                    <input asp-for="EmergencyContactPhone" class="form-control form-control-sm" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Employment Information Section -->
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <strong>Employment Information</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                                    <input asp-for="JobTitle" class="form-control form-control-sm" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Department" class="form-label">Department</label>
                                    <input asp-for="Department" class="form-control form-control-sm" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="EmploymentType" class="form-label">Employment Type</label>
                                    <select asp-for="EmploymentType" class="form-control form-control-sm">
                                        <option value="">-- Select Employment Type --</option>
                                        <option value="Full-time">Full-time</option>
                                        <option value="Part-time">Part-time</option>
                                        <option value="Contract">Contract</option>
                                    </select>
                                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DateOfHire" class="form-label">Date of Hire</label>
                                    <input asp-for="DateOfHire" type="date" class="form-control form-control-sm" />
                                    <span asp-validation-for="DateOfHire" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="WorkLocation" class="form-label">Work Location</label>
                                    <select asp-for="WorkLocation" class="form-control form-control-sm">
                                        <option value="">-- Select Work Location --</option>
                                        <option value="Office">Office</option>
                                        <option value="Remote">Remote</option>
                                        <option value="Hybrid">Hybrid</option>
                                    </select>
                                    <span asp-validation-for="WorkLocation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SupervisorName" class="form-label">Supervisor Name</label>
                                    <input asp-for="SupervisorName" class="form-control form-control-sm" />
                                    <span asp-validation-for="SupervisorName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ProbationPeriod" class="form-label">Probation Period (Months)</label>
                                    <input asp-for="ProbationPeriod" type="number" class="form-control form-control-sm" />
                                    <span asp-validation-for="ProbationPeriod" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- SweetAlert2 Script -->
    <script>
        $(document).ready(function () {
            // Intercept form submission
            $('form').on('submit', function (e) {
                e.preventDefault(); // Prevent default form submission

                var form = $(this);
                var url = form.attr('action');
                var data = form.serialize();

                // Submit form via AJAX
                $.ajax({
                    type: "POST",
                    url: url,
                    data: data,
                    success: function (response) {
                        if (response.success) {
                            // Show success popup
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: response.message,
                                confirmButtonColor: '#4e73df',
                                timer: 3000, // Auto-close after 3 seconds
                                timerProgressBar: true
                            }).then(() => {
                                // Redirect to the list page after the popup closes
                                window.location.href = '@Url.Action("Index")';
                            });
                        } else {
                            // Show error message if the submission fails
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: response.message,
                                confirmButtonColor: '#4e73df'
                            });
                        }
                    },
                    error: function () {
                        // Handle AJAX errors
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'An error occurred while submitting the form.',
                            confirmButtonColor: '#4e73df'
                        });
                    }
                });
            });
        });
    </script>
}

