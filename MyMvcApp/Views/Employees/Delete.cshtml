@model MyMvcApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4">Delete Employee</h1>
    <hr />
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Are you sure you want to delete this employee?</h3>
        </div>
        <div class="card-body">
            <h4 class="card-subtitle mb-3 text-muted">Employee Details</h4>
            <div class="row">
                <!-- Personal Information Section -->
                <div class="col-md-6">
                    <h5 class="text-primary">Personal Information</h5>
                    <dl class="row small">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4">Middle Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MiddleName)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-4">Nationality</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nationality)</dd>

                        <dt class="col-sm-4">Marital Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaritalStatus)</dd>
                    </dl>
                </div>

                <!-- Contact Information Section -->
                <div class="col-md-6">
                    <h5 class="text-primary">Contact Information</h5>
                    <dl class="row small">
                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4">Email Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailAddress)</dd>

                        <dt class="col-sm-4">Residential Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ResidentialAddress)</dd>

                        <dt class="col-sm-4">Emergency Contact</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyContactName)</dd>

                        <dt class="col-sm-4">Relationship</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyContactRelationship)</dd>

                        <dt class="col-sm-4">Emergency Phone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmergencyContactPhone)</dd>
                    </dl>
                </div>
            </div>

            <div class="row mt-3">
                <!-- Employment Information Section -->
                <div class="col-md-12">
                    <h5 class="text-primary">Employment Information</h5>
                    <dl class="row small">
                        <dt class="col-sm-2">Job Title</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.JobTitle)</dd>

                        <dt class="col-sm-2">Department</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.Department)</dd>

                        <dt class="col-sm-2">Employment Type</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.EmploymentType)</dd>

                        <dt class="col-sm-2">Date of Hire</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.DateOfHire)</dd>

                        <dt class="col-sm-2">Work Location</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.WorkLocation)</dd>

                        <dt class="col-sm-2">Supervisor</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.SupervisorName)</dd>

                        <dt class="col-sm-2">Probation Period</dt>
                        <dd class="col-sm-4">@Html.DisplayFor(model => model.ProbationPeriod)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="EmployeeID" />
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-sm ml-2">Back to List</a>
        </div>
    </div>
</div>